package com.cts.march3;

public class ModifyNumber {

	static void printArr(int[] arr, int n) {
		for (int i = 0; i < n; i++) {
			System.out.print(arr[i] + " ");
		}
		int diff[] ;
		diff=new int[n];
		for (int i = 0; i < n - 1; i++) {

			diff[i] = (arr[i] - arr[i + 1]);
		}
		for (int i = 0; i < n; i++) {
			System.out.print(diff[i] + " ");
		}
	}

	public static void main(String[] args) {
		int[] arr = { 3, 4, 2, 1, 6 };
		int n = arr.length;
		printArr(arr, n);
	}
}
